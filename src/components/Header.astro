---
interface Props {
  currentPage?: string;
}

const { currentPage = 'dashboard' } = Astro.props;
---

<header class="header">
  <div class="header-container">
    <div class="logo">AI Stats</div>
    <nav class="nav">
      <a href="/" class={`nav-item ${currentPage === 'dashboard' ? 'active' : ''}`}>Stats</a>
      <a href="/compare" class={`nav-item ${currentPage === 'compare' ? 'active' : ''}`}>Compare</a>
      <a href="/about" class={`nav-item ${currentPage === 'about' ? 'active' : ''}`}>About</a>
    </nav>
    <div class="theme-toggle" aria-label="Theme">
      <button type="button" class="theme-pill" data-theme-choice="night">Night</button>
      <button type="button" class="theme-pill" data-theme-choice="moon">Moon</button>
      <button type="button" class="theme-pill" data-theme-choice="dawn">Dawn</button>
    </div>
  </div>
</header>

<script>
  // @ts-nocheck
  if (typeof document !== 'undefined') {
    const THEME_KEY = 'ai-stats-theme';
    const VALID = ['night', 'moon', 'dawn'];
    const root = document.documentElement;
    const buttons = Array.from(document.querySelectorAll('[data-theme-choice]'));

    function applyTheme(theme) {
      if (!VALID.includes(theme)) return;
      root.dataset.theme = theme;
      try {
        localStorage.setItem(THEME_KEY, theme);
      } catch (e) {
        // ignore
      }
      buttons.forEach((btn) => {
        if (!(btn instanceof HTMLElement)) return;
        btn.classList.toggle('active', btn.dataset.themeChoice === theme);
      });
    }

    const initial = root.dataset.theme;
    applyTheme(VALID.includes(initial) ? initial : 'night');

    buttons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const theme = btn.dataset.themeChoice;
        if (theme) applyTheme(theme);
      });
    });
  }
</script>

<style>
.header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: linear-gradient(to right, var(--overlay), var(--surface));
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.12);
  height: 40px;
  box-sizing: border-box;
}

.header-container {
  max-width: 1400px;
  height: 40px;
  margin: 0 auto;
  padding: 0 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
  box-sizing: border-box;
}

.logo {
  font-size: 1rem;
  font-weight: 900;
  background: linear-gradient(135deg, #e0def4, #9ccfd8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.nav {
  display: flex;
  gap: 0.8rem;
  align-items: center;
}

.theme-toggle {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 2px;
  border-radius: 9999px;
  background: rgba(38, 35, 58, 0.9);
  border: 1px solid rgba(156, 207, 216, 0.4);
}

.theme-pill {
  border: none;
  background: transparent;
  padding: 0.15rem 0.6rem;
  border-radius: 9999px;
  font-size: 0.7rem;
  font-weight: 600;
  color: rgba(224, 222, 244, 0.7);
  cursor: pointer;
  transition: background 0.2s ease, color 0.2s ease;
}

.theme-pill:hover {
  background: rgba(156, 207, 216, 0.16);
}

.theme-pill.active {
  background: var(--foam);
  color: var(--base);
}

.nav-item {
  color: rgba(224, 222, 244, 0.8);
  text-decoration: none;
  font-weight: 600;
  padding: 0.15rem 0.5rem;
  border-radius: 50px;
  transition: all 0.3s ease;
  font-size: 0.8rem;
  display: inline-flex;
  align-items: center;
  height: 24px;
  box-sizing: border-box;
}

.nav-item:hover {
  color: #e0def4;
  background: rgba(156, 207, 216, 0.1);
  transform: translateY(-1px);
}

.nav-item.active {
  color: #e0def4;
  background: linear-gradient(135deg, rgba(156, 207, 216, 0.3), rgba(156, 207, 216, 0.15));
  border: 1px solid rgba(156, 207, 216, 0.4);
  box-shadow: 0 4px 16px rgba(156, 207, 216, 0.2);
}

/* Legacy .nav-link support (mirror .nav-item styles) */
.nav-link {
  color: rgba(224, 222, 244, 0.8);
  text-decoration: none;
  font-weight: 600;
  padding: 0.15rem 0.5rem;
  border-radius: 50px;
  transition: all 0.3s ease;
  font-size: 0.8rem;
  display: inline-flex;
  align-items: center;
  height: 24px;
  box-sizing: border-box;
}
.nav-link:hover { color: #e0def4; background: rgba(156, 207, 216, 0.1); transform: translateY(-1px); }
.nav-link.active { color: #e0def4; background: linear-gradient(135deg, rgba(156, 207, 216, 0.3), rgba(156, 207, 216, 0.15)); border: 1px solid rgba(156, 207, 216, 0.4); box-shadow: 0 4px 16px rgba(156, 207, 216, 0.2); }



@media (max-width: 768px) {
  .header-container {
    padding: 0 1rem;
    gap: 0.5rem;
  }
  .nav {
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }
  .nav-item {
    padding: 0.3rem 0.6rem;
    font-size: 0.85rem;
    height: 28px;
    white-space: nowrap;
  }
  .logo {
    font-size: 1.1rem;
    flex-shrink: 0;
  }
  .theme-toggle {
    display: none;
  }
}

@media (max-width: 480px) {
  .header-container {
    padding: 0 0.75rem;
  }
  .nav {
    width: 100%;
    justify-content: space-between;
    gap: 0.4rem;
    flex-wrap: wrap;
  }
  .nav-item {
    padding: 0.4rem 0.65rem;
    font-size: 0.8rem;
    min-width: 72px;
    text-align: center;
  }
  .logo {
    font-size: 1rem;
  }
}

@media (max-width: 360px) {
  .nav {
    gap: 0.35rem;
  }
  .nav-item {
    padding: 0.35rem 0.5rem;
    font-size: 0.75rem;
    min-width: 64px;
  }
  .logo {
    font-size: 0.95rem;
  }
}
</style>