---
interface Props {
  currentPage?: string;
}

const { currentPage = 'dashboard' } = Astro.props;
---

<nav class="glass-nav">
  <div class="nav-content">
    <div class="logo">
      AI Stats
    </div>
    <div class="nav-links">
      <a href="/" class={`nav-link ${currentPage === 'dashboard' ? 'active' : ''}`}>Stats</a>
      <a href="/compare" class={`nav-link ${currentPage === 'compare' ? 'active' : ''}`}>Compare</a>
      <a href="/about" class={`nav-link ${currentPage === 'about' ? 'active' : ''}`}>About</a>
    </div>
  </div>
</nav>

<style>
.glass-nav {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: rgba(15, 15, 25, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(148, 197, 204, 0.2);
  padding: 0.5rem 0;
}

.nav-content {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo {
  font-size: 1.5rem;
  font-weight: 900;
  background: linear-gradient(135deg, #F8F8F8, #94C5CC);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.nav-links {
  display: flex;
  gap: 2rem;
  align-items: center;
}

.nav-link {
  color: rgba(248, 248, 248, 0.8);
  text-decoration: none;
  font-weight: 600;
  padding: 0.75rem 1.5rem;
  border-radius: 50px;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.nav-link:hover {
  color: #F8F8F8;
  background: rgba(148, 197, 204, 0.1);
  transform: translateY(-1px);
}

.nav-link.active {
  color: #F8F8F8;
  background: linear-gradient(135deg, rgba(148, 197, 204, 0.3), rgba(148, 197, 204, 0.15));
  border: 1px solid rgba(148, 197, 204, 0.4);
  box-shadow: 0 4px 16px rgba(148, 197, 204, 0.2);
}



@media (max-width: 768px) {
  .nav-content {
    padding: 0 1rem;
  }
  
  .nav-links {
    gap: 1rem;
  }
  
  .nav-link {
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
  }
  
  .logo {
    font-size: 1.25rem;
  }
}

@media (max-width: 480px) {
  .nav-links {
    gap: 0.5rem;
  }
  
  .nav-link {
    padding: 0.5rem 0.75rem;
    font-size: 0.85rem;
  }
}
</style>