---
interface Props {
  currentPage?: string;
}

const { currentPage = 'dashboard' } = Astro.props;
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo-link" aria-label="Go to homepage">
      <div class="logo">AI Stats</div>
    </a>
    
    <!-- Desktop nav -->
    <nav class="nav desktop-nav">
      <a href="/" class={`nav-item ${currentPage === 'dashboard' ? 'active' : ''}`}>Stats</a>
      <a href="/compare" class={`nav-item ${currentPage === 'compare' ? 'active' : ''}`}>Compare</a>
      <a href="/about" class={`nav-item ${currentPage === 'about' ? 'active' : ''}`}>About</a>
      <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme" title="Toggle light/dark theme">
        <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/>
        </svg>
        <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/>
        </svg>
      </button>
    </nav>
    
    <!-- Mobile hamburger -->
    <div class="mobile-controls">
      <button id="theme-toggle-mobile" class="theme-toggle" aria-label="Toggle theme">
        <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/>
        </svg>
        <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"/>
        </svg>
      </button>
      <button id="mobile-menu-toggle" class="hamburger" aria-label="Toggle menu" aria-expanded="false">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>
    </div>
  </div>
  
  <!-- Mobile nav overlay -->
  <div id="mobile-nav-overlay" class="mobile-nav-overlay"></div>
  <nav id="mobile-nav" class="mobile-nav" aria-hidden="true">
    <a href="/" class={`mobile-nav-item ${currentPage === 'dashboard' ? 'active' : ''}`}>Stats</a>
    <a href="/compare" class={`mobile-nav-item ${currentPage === 'compare' ? 'active' : ''}`}>Compare</a>
    <a href="/about" class={`mobile-nav-item ${currentPage === 'about' ? 'active' : ''}`}>About</a>
  </nav>
</header>

<style>
.header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: linear-gradient(to right, var(--overlay), var(--surface));
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.12);
  height: 40px;
  box-sizing: border-box;
}

.header-container {
  max-width: 1400px;
  height: 40px;
  margin: 0 auto;
  padding: 0 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
  box-sizing: border-box;
}

.logo-link {
  text-decoration: none;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.logo-link:hover {
  transform: scale(1.02);
  opacity: 0.9;
}

.logo {
  font-size: 1rem;
  font-weight: 900;
  background: linear-gradient(135deg, #e0def4, #9ccfd8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.nav {
  display: flex;
  gap: 0.8rem;
  align-items: center;
}

.nav-item {
  color: rgba(224, 222, 244, 0.8);
  text-decoration: none;
  font-weight: 600;
  padding: 0.15rem 0.5rem;
  border-radius: 50px;
  transition: all 0.3s ease;
  font-size: 0.8rem;
  display: inline-flex;
  align-items: center;
  height: 24px;
  box-sizing: border-box;
}

.nav-item:hover {
  color: #e0def4;
  background: rgba(156, 207, 216, 0.1);
  transform: translateY(-1px);
}

.nav-item.active {
  color: #e0def4;
  background: linear-gradient(135deg, rgba(156, 207, 216, 0.3), rgba(156, 207, 216, 0.15));
  border: 1px solid rgba(156, 207, 216, 0.4);
  box-shadow: 0 4px 16px rgba(156, 207, 216, 0.2);
}


/* Theme toggle */
.theme-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  border: 1px solid rgba(156, 207, 216, 0.3);
  border-radius: 50%;
  background: rgba(156, 207, 216, 0.1);
  color: var(--foam);
  cursor: pointer;
  transition: all 0.2s ease;
}

.theme-toggle:hover {
  background: rgba(156, 207, 216, 0.2);
  border-color: rgba(156, 207, 216, 0.5);
}

.theme-toggle .sun-icon { display: none; }
.theme-toggle .moon-icon { display: block; }

:global(html.light) .theme-toggle .sun-icon { display: block; }
:global(html.light) .theme-toggle .moon-icon { display: none; }

/* Mobile controls */
.mobile-controls {
  display: none;
  align-items: center;
  gap: 0.5rem;
}

/* Hamburger button */
.hamburger {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 32px;
  height: 32px;
  padding: 6px;
  background: transparent;
  border: 1px solid rgba(156, 207, 216, 0.3);
  border-radius: 6px;
  cursor: pointer;
  gap: 4px;
  transition: all 0.2s ease;
}

.hamburger:hover {
  background: rgba(156, 207, 216, 0.1);
  border-color: rgba(156, 207, 216, 0.5);
}

.hamburger-line {
  width: 16px;
  height: 2px;
  background: var(--foam);
  border-radius: 1px;
  transition: all 0.3s ease;
}

.hamburger.open .hamburger-line:nth-child(1) {
  transform: rotate(45deg) translate(4px, 4px);
}

.hamburger.open .hamburger-line:nth-child(2) {
  opacity: 0;
}

.hamburger.open .hamburger-line:nth-child(3) {
  transform: rotate(-45deg) translate(4px, -4px);
}

/* Mobile nav overlay */
.mobile-nav-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  z-index: 998;
}

.mobile-nav-overlay.open {
  opacity: 1;
  visibility: visible;
}

/* Mobile nav */
.mobile-nav {
  position: fixed;
  top: 40px;
  right: 0;
  width: 200px;
  background: var(--surface);
  border-left: 1px solid rgba(255, 255, 255, 0.1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 0 0 0 12px;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  transform: translateX(100%);
  transition: transform 0.3s ease;
  z-index: 999;
  box-shadow: -4px 4px 20px rgba(0, 0, 0, 0.3);
}

.mobile-nav.open {
  transform: translateX(0);
}

.mobile-nav-item {
  color: rgba(224, 222, 244, 0.8);
  text-decoration: none;
  font-weight: 600;
  padding: 0.75rem 1rem;
  border-radius: 8px;
  font-size: 0.9rem;
  transition: all 0.2s ease;
}

.mobile-nav-item:hover {
  color: #e0def4;
  background: rgba(156, 207, 216, 0.1);
}

.mobile-nav-item.active {
  color: #e0def4;
  background: linear-gradient(135deg, rgba(156, 207, 216, 0.3), rgba(156, 207, 216, 0.15));
  border: 1px solid rgba(156, 207, 216, 0.4);
}

@media (max-width: 640px) {
  .desktop-nav {
    display: none;
  }
  .mobile-controls {
    display: flex;
  }
}
</style>

<script is:inline>
  (function() {
    function initHeader() {
      var menuToggle = document.getElementById('mobile-menu-toggle');
      var mobileNav = document.getElementById('mobile-nav');
      var overlay = document.getElementById('mobile-nav-overlay');
      var themeToggle = document.getElementById('theme-toggle');
      var themeToggleMobile = document.getElementById('theme-toggle-mobile');

      function toggleMenu() {
        var isOpen = mobileNav && mobileNav.classList.toggle('open');
        if (menuToggle) menuToggle.classList.toggle('open', isOpen);
        if (overlay) overlay.classList.toggle('open', isOpen);
        if (menuToggle) menuToggle.setAttribute('aria-expanded', String(isOpen));
        if (mobileNav) mobileNav.setAttribute('aria-hidden', String(!isOpen));
      }

      function toggleTheme() {
        var isLight = document.documentElement.classList.contains('light');
        var newTheme = isLight ? 'dark' : 'light';
        document.documentElement.classList.toggle('light', newTheme === 'light');
        localStorage.setItem('theme', newTheme);
      }

      // Remove old listeners by cloning elements
      if (menuToggle) {
        var newMenuToggle = menuToggle.cloneNode(true);
        menuToggle.parentNode.replaceChild(newMenuToggle, menuToggle);
        newMenuToggle.addEventListener('click', toggleMenu);
      }
      if (overlay) {
        var newOverlay = overlay.cloneNode(true);
        overlay.parentNode.replaceChild(newOverlay, overlay);
        newOverlay.addEventListener('click', toggleMenu);
      }
      if (themeToggle) {
        var newThemeToggle = themeToggle.cloneNode(true);
        themeToggle.parentNode.replaceChild(newThemeToggle, themeToggle);
        newThemeToggle.addEventListener('click', toggleTheme);
      }
      if (themeToggleMobile) {
        var newThemeToggleMobile = themeToggleMobile.cloneNode(true);
        themeToggleMobile.parentNode.replaceChild(newThemeToggleMobile, themeToggleMobile);
        newThemeToggleMobile.addEventListener('click', toggleTheme);
      }
    }

    // Run on initial load and after View Transitions
    document.addEventListener('astro:page-load', initHeader);
  })();
</script>