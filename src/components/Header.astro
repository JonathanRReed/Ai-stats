---
interface Props {
  currentPage?: string;
}

const { currentPage = 'dashboard' } = Astro.props;
---

<header class="header">
  <div class="header-container">
    <div class="logo">AI Stats</div>
    <nav class="nav">
      <a href="/" class={`nav-item ${currentPage === 'dashboard' ? 'active' : ''}`}>Stats</a>
      <a href="/compare" class={`nav-item ${currentPage === 'compare' ? 'active' : ''}`}>Compare</a>
      <a href="/about" class={`nav-item ${currentPage === 'about' ? 'active' : ''}`}>About</a>
    </nav>
  </div>
</header>

<style>
.header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: rgba(15, 15, 25, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(148, 197, 204, 0.2);
  height: 40px;
  box-sizing: border-box;
}

.header-container {
  max-width: 1400px;
  height: 40px;
  margin: 0 auto;
  padding: 0 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.logo {
  font-size: 1rem;
  font-weight: 900;
  background: linear-gradient(135deg, #F8F8F8, #94C5CC);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.nav {
  display: flex;
  gap: 0.8rem;
  align-items: center;
}

.nav-item {
  color: rgba(248, 248, 248, 0.8);
  text-decoration: none;
  font-weight: 600;
  padding: 0.15rem 0.5rem;
  border-radius: 50px;
  transition: all 0.3s ease;
  font-size: 0.8rem;
  display: inline-flex;
  align-items: center;
  height: 24px;
  box-sizing: border-box;
}

.nav-item:hover {
  color: #F8F8F8;
  background: rgba(148, 197, 204, 0.1);
  transform: translateY(-1px);
}

.nav-item.active {
  color: #F8F8F8;
  background: linear-gradient(135deg, rgba(148, 197, 204, 0.3), rgba(148, 197, 204, 0.15));
  border: 1px solid rgba(148, 197, 204, 0.4);
  box-shadow: 0 4px 16px rgba(148, 197, 204, 0.2);
}

.nav-link:hover {
  color: #F8F8F8;
  background: rgba(148, 197, 204, 0.1);
  transform: translateY(-1px);
}

.nav-link.active {
  color: #F8F8F8;
  background: linear-gradient(135deg, rgba(148, 197, 204, 0.3), rgba(148, 197, 204, 0.15));
  border: 1px solid rgba(148, 197, 204, 0.4);
  box-shadow: 0 4px 16px rgba(148, 197, 204, 0.2);
}



@media (max-width: 768px) {
  .nav-content {
    padding: 0 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .nav-links {
    gap: 1.25rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .nav-link {
    padding: 0.75rem 1.25rem;
    font-size: 0.9rem;
    min-height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    white-space: nowrap;
  }
  
  .logo {
    font-size: 1.3rem;
    flex-shrink: 0;
  }
}

@media (max-width: 480px) {
  .glass-nav {
    padding: 0.75rem 0;
  }
  
  .nav-content {
    padding: 0 0.75rem;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  
  .nav-links {
    gap: 0.75rem;
    width: 100%;
    justify-content: space-around;
    max-width: 320px;
  }
  
  .nav-link {
    padding: 0.75rem 1rem;
    font-size: 0.85rem;
    min-width: 80px;
    flex: 1;
    text-align: center;
  }
  
  .logo {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
  }
}

@media (max-width: 360px) {
  .nav-links {
    gap: 0.5rem;
  }
  
  .nav-link {
    padding: 0.65rem 0.75rem;
    font-size: 0.8rem;
    min-width: 70px;
  }
  
  .logo {
    font-size: 1.1rem;
  }
}
</style>