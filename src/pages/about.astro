---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';

const title = 'About Jonathan Reed - AI Stats Dashboard Creator';
const description = 'Learn about Jonathan Reed and the AI Stats project - a modern web tool for comparing AI model pricing and performance benchmarks. Built with Astro, TypeScript, and Supabase.';
---

<Layout title={title} description={description} ogType="profile">
  <style>
		body {
			background: var(--base);
			color: var(--text);
			font-family: 'Nebula Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
			line-height: 1.6;
			margin: 0;
			padding: 0;
			min-height: 100vh;
			position: relative;
			overflow-x: hidden;
		}
		
		body::before {
			content: '';
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: 
				radial-gradient(circle at 20% 30%, rgba(156, 207, 216, 0.05) 0%, transparent 50%),
				radial-gradient(circle at 80% 70%, rgba(196, 167, 231, 0.04) 0%, transparent 50%);
			pointer-events: none;
			z-index: 0;
		}

		.container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 2rem;
			min-height: 100vh;
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			position: relative;
			z-index: 1;
		}

		.about-card {
			background: linear-gradient(145deg, var(--surface), var(--overlay));
			border: 1px solid rgba(255, 255, 255, 0.12);
			border-radius: 24px;
			padding: 3rem;
			box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
			backdrop-filter: blur(20px);
			max-width: 900px;
			width: 100%;
			position: relative;
			transition: border-color 0.2s ease, box-shadow 0.2s ease;
		}

		:global(html.light) .about-card {
			border: 1px solid rgba(0, 0, 0, 0.08);
			box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		}

		@media (prefers-reduced-motion: no-preference) {
			.about-card:hover {
				box-shadow: 0 12px 48px rgba(0, 0, 0, 0.4);
				border-color: rgba(156, 207, 216, 0.2);
			}
		}

		@media (prefers-reduced-motion: reduce) {
			.about-card:hover {
				border-color: rgba(156, 207, 216, 0.2);
			}
		}

		:global(html.light) .profile-image {
			border: 3px solid rgba(40, 105, 131, 0.3);
			box-shadow: 0 8px 24px rgba(40, 105, 131, 0.15);
		}

		.profile-section {
			text-align: center;
			margin-bottom: 2rem;
		}

		.profile-image {
			width: 150px;
			height: 150px;
			border-radius: 50%;
			margin: 0 auto 1.5rem;
			overflow: hidden;
			border: 3px solid rgba(156, 207, 216, 0.3);
			box-shadow: 0 8px 24px rgba(156, 207, 216, 0.2);
		}

		.profile-image img {
			width: 100%;
			height: 100%;
			object-fit: cover;
		}

		.name {
			font-size: 2.5rem;
			font-weight: 700;
			margin-bottom: 0.5rem;
			background: linear-gradient(135deg, #e0def4, #9ccfd8);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			background-clip: text;
		}

		:global(html.light) .name {
			background: linear-gradient(135deg, #575279, #286983);
			-webkit-background-clip: text;
			background-clip: text;
		}

		.tagline {
			font-size: 1.1rem;
			color: #b0acbe;
			margin-bottom: 2rem;
		}

		:global(html.light) .tagline {
			color: #797593;
		}

		.project-section {
			margin-bottom: 2rem;
		}

		.section-title {
			font-size: 1.8rem;
			font-weight: 700;
			margin-bottom: 1.5rem;
			color: #e0def4;
			text-align: center;
		}

		:global(html.light) .section-title {
			color: #575279;
		}

		.project-info {
			background: linear-gradient(145deg, var(--surface), var(--overlay));
			border-radius: 16px;
			padding: 2rem;
			border: 1px solid rgba(255, 255, 255, 0.16);
			backdrop-filter: blur(10px);
			box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
			transition: border-color 0.2s ease, box-shadow 0.2s ease;
		}

		:global(html.light) .project-info {
			border: 1px solid rgba(0, 0, 0, 0.08);
			box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
		}

		@media (prefers-reduced-motion: no-preference) {
			.project-info:hover {
				box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
				border-color: rgba(156, 207, 216, 0.25);
			}
		}

		@media (prefers-reduced-motion: reduce) {
			.project-info:hover {
				border-color: rgba(156, 207, 216, 0.25);
			}
		}

		.project-info p {
		margin-bottom: 1rem;
		line-height: 1.7;
		color: var(--text);
		}

		.project-info a {
			color: #9ccfd8;
			text-decoration: none;
			transition: color 0.2s ease;
		}

		:global(html.light) .project-info a {
			color: #286983;
		}

		.project-info a:hover {
			color: #c4a7e7;
			text-decoration: underline;
		}

		:global(html.light) .project-info a:hover {
			color: #907aa9;
		}

		.tech-stack {
			display: flex;
			flex-wrap: wrap;
			gap: 0.75rem;
			margin-top: 1.5rem;
			justify-content: center;
		}

		.tech-tag {
			background: rgba(156, 207, 216, 0.15);
			color: #e0def4;
			padding: 0.6rem 1.2rem;
			border-radius: 20px;
			font-size: 0.9rem;
			font-weight: 600;
			border: 1px solid rgba(156, 207, 216, 0.3);
			transition: background 0.2s ease, border-color 0.2s ease;
		}

		:global(html.light) .tech-tag {
			background: rgba(40, 105, 131, 0.12);
			color: #575279;
			border: 1px solid rgba(40, 105, 131, 0.3);
		}

		@media (prefers-reduced-motion: no-preference) {
			.tech-tag:hover {
				background: rgba(156, 207, 216, 0.25);
				border-color: rgba(156, 207, 216, 0.5);
			}
		}

		@media (prefers-reduced-motion: reduce) {
			.tech-tag:hover {
				background: rgba(156, 207, 216, 0.25);
				border-color: rgba(156, 207, 216, 0.5);
			}
		}

		.links-section {
			display: flex;
			justify-content: center;
			gap: 1rem;
			flex-wrap: wrap;
			margin-top: 2rem;
		}

		.link-button {
			display: inline-flex;
			align-items: center;
			gap: 0.5rem;
			padding: 0.9rem 1.8rem;
			background: rgba(156, 207, 216, 0.15);
			border: 1px solid rgba(156, 207, 216, 0.3);
			border-radius: 30px;
			color: #e0def4;
			text-decoration: none;
			font-weight: 600;
			font-size: 1rem;
			transition: background 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
		}

		:global(html.light) .link-button {
			background: rgba(40, 105, 131, 0.12);
			color: #575279;
			border: 1px solid rgba(40, 105, 131, 0.3);
		}

		@media (prefers-reduced-motion: no-preference) {
			.link-button:hover {
				background: rgba(156, 207, 216, 0.25);
				border-color: rgba(156, 207, 216, 0.5);
				box-shadow: 0 4px 12px rgba(156, 207, 216, 0.2);
			}
		}

		@media (prefers-reduced-motion: reduce) {
			.link-button:hover {
				background: rgba(156, 207, 216, 0.25);
				border-color: rgba(156, 207, 216, 0.5);
			}
		}

		@media (max-width: 768px) {
			.container {
				padding: 1rem;
			}
			
			.about-card {
				padding: 2rem 1.5rem;
			}
			
			.name {
				font-size: 2rem;
			}

			.section-title {
				font-size: 1.5rem;
			}

			.link-button {
				padding: 0.75rem 1.5rem;
				font-size: 0.9rem;
			}
		}
	</style>
  <Header currentPage="about" />
  <div class="container">
    <div class="about-card">
			<div class="profile-section">
				<div class="profile-image">
					<img src="/jonathan.avif" alt="Jonathan Reed" />
				</div>
				<h1 class="name">Hello, I'm Jonathan Reed</h1>
				<p class="tagline">This is Ai Stats, a simple AI model comparison tool</p>
			</div>

			<div class="project-section">
				<h2 class="section-title">About This Project</h2>
				<div class="project-info">
					<p>
						This is a hobbyist project inspired by <a href="https://model-prices.vercel.app/" target="_blank">Theo Browne's model prices dashboard</a>. 
						Its a simple AI model comparison tool to explore AI model pricing & benchmarks with real-timeish data.
					</p>
					<p>
						All data & benchmarking is sourced from 
						<a href="https://artificialanalysis.ai/" target="_blank">
							ArtificialAnalysis.com <img src="/icons/Icon SVG.svg" alt="" style="width: 16px; height: 16px; vertical-align: middle;" />
						</a> 
						via their free API.
					</p>
					<p>
						Benchmark data from Epoch AI, AI Benchmarking Hub, used under Creative Commons Attribution license, with Apache 2.0 licensing for Aider Polyglot and Terminal Bench derived subsets.
						<img src="/icons/epochaidata.svg" alt="Epoch AI Data" style="width: 16px; height: 16px; vertical-align: middle;" />
					</p>
					<p>The font used is NebulaSans, a custom font created by <a href="https://nebula.com" target="_blank">Nebula</a>.</p>
					<p style="font-style: italic; color: #b0acbe; margin-top: 1rem;">
					This project is not intended for commercial use and serves as a learning exercise in modern web development and AI model analysis.
					</p>
					</div>
			</div>

			<div class="links-section">
				<a href="https://linkedin.com/in/jonathanrayreed" target="_blank" rel="noopener noreferrer" class="link-button">
					<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
					LinkedIn
				</a>
				<a href="https://github.com/jonathanRReed/" target="_blank" rel="noopener noreferrer" class="link-button">
					<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
					GitHub
				</a>
				<a href="https://jonathanrreed.com" target="_blank" rel="noopener noreferrer" class="link-button">
					<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>
					Website
				</a>
			</div>
    </div>
  </div>
	<Footer />
	<ScrollToTop />
</Layout>
